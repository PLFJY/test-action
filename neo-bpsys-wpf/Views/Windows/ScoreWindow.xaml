<Window
    x:Class="neo_bpsys_wpf.Views.Windows.ScoreWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ab="clr-namespace:neo_bpsys_wpf.AttachedBehaviors"
    xmlns:cc="clr-namespace:neo_bpsys_wpf.CustomControls"
    xmlns:cv="clr-namespace:neo_bpsys_wpf.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:neo_bpsys_wpf.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:neo_bpsys_wpf.ViewModels.Windows"
    Title="前台-比分"
    Width="1440"
    Height="347"
    d:DataContext="{d:DesignInstance Type=vm:ScoreWindowViewModel,
                                     IsDesignTimeCreatable=True}"
    Background="Blue"
    Style="{StaticResource FrontWindow}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Width="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Width}" Height="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Height}">
        <Grid.RowDefinitions>
            <RowDefinition Height="152" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Width="480"
                Height="152"
                HorizontalAlignment="Left"
                BorderBrush="Black"
                BorderThickness="1">
                <Canvas Name="ScoreSurCanvas" Grid.Column="0">
                    <Canvas.Background>
                        <ImageBrush d:ImageSource="/Assets/scoreSur.png" />
                    </Canvas.Background>
                    <Canvas.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="White" />
                        </Style>
                    </Canvas.Resources>
                    <ui:Image
                        Name="SurTeamLogo"
                        Canvas.Left="22"
                        Canvas.Top="18"
                        Width="115"
                        Height="114"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
                        d:Source="/Assets/TestLogo.JPG"
                        CornerRadius="8"
                        Source="{Binding CurrentGame.SurTeam.Logo}"
                        Stretch="Fill" />
                    <TextBlock
                        Name="SurTeamName"
                        Canvas.Left="153"
                        Canvas.Top="34"
                        Width="231"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
                        d:Text="求生者队伍名称"
                        FontFamily="{StaticResource POP1W5}"
                        FontSize="32"
                        Text="{Binding CurrentGame.SurTeam.Name}"
                        TextAlignment="Center"
                        TextWrapping="WrapWithOverflow" />
                    <TextBlock
                        Name="SurTeamMajorPoint"
                        Canvas.Left="209"
                        Canvas.Top="86"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
                        d:Text="W0 D0"
                        FontFamily="{StaticResource POP1W5}"
                        FontSize="38"
                        Text="{Binding CurrentGame.SurTeam.Score.MajorPointsOnFront}"
                        TextAlignment="Center" />
                    <Border
                        Name="MinorPointsSur"
                        Canvas.Left="389"
                        Canvas.Top="11"
                        Width="64"
                        Height="130"
                        ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            d:Text="0"
                            FontFamily="{StaticResource POP1W5}"
                            FontSize="100"
                            Text="{Binding CurrentGame.SurTeam.Score.MinorPoints}"
                            TextAlignment="Center" />
                    </Border>
                </Canvas>
            </Border>
            <Border
                Grid.Column="2"
                Width="480"
                Height="152"
                HorizontalAlignment="Right"
                BorderBrush="Black"
                BorderThickness="1">
                <Canvas Name="ScoreHunCanvas">
                    <Canvas.Background>
                        <ImageBrush d:ImageSource="/Assets/scoreHun.png" />
                    </Canvas.Background>
                    <Canvas.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="White" />
                        </Style>
                    </Canvas.Resources>
                    <ui:Image
                        Name="HunTeamLogo"
                        Canvas.Left="352"
                        Canvas.Top="18"
                        Width="116"
                        Height="114"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
                        d:Source="/Assets/TestLogo.JPG"
                        CornerRadius="8"
                        Source="{Binding CurrentGame.HunTeam.Logo}"
                        Stretch="Fill" />
                    <TextBlock
                        Name="HunTeamName"
                        Canvas.Left="99"
                        Canvas.Top="33"
                        Width="231"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
                        d:Text="监管者队伍名称"
                        FontFamily="{StaticResource POP1W5}"
                        FontSize="32"
                        Text="{Binding CurrentGame.HunTeam.Name}"
                        TextAlignment="Center"
                        TextWrapping="WrapWithOverflow" />
                    <TextBlock
                        Name="HunTeamMajorPoint"
                        Canvas.Left="167"
                        Canvas.Top="85"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
                        d:Text="W0 D0"
                        FontFamily="{StaticResource POP1W5}"
                        FontSize="38"
                        Text="{Binding CurrentGame.HunTeam.Score.MajorPointsOnFront}"
                        TextAlignment="Center" />
                    <Border
                        Name="MinorPointsHun"
                        Canvas.Left="21"
                        Canvas.Top="10"
                        Width="64"
                        Height="130"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            d:Text="0"
                            FontFamily="{StaticResource POP1W5}"
                            FontSize="100"
                            Text="{Binding CurrentGame.HunTeam.Score.MinorPoints}"
                            TextAlignment="Center" />
                    </Border>
                </Canvas>
            </Border>
        </Grid>
        <Border
            Grid.Row="1"
            BorderBrush="Black"
            BorderThickness="1">
            <Canvas Name="ScoreGlobalCanvas">
                <Canvas.Background>
                    <ImageBrush d:ImageSource="/Assets/scoreGlobal.png" />
                </Canvas.Background>
                <Canvas.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="White" />
                    </Style>
                </Canvas.Resources>
                <TextBlock
                    Name="MainTeamName"
                    Canvas.Left="10"
                    Canvas.Top="96"
                    Width="134"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
                    d:Text="主队队伍名称"
                    FontFamily="{StaticResource POP1W5}"
                    FontSize="18"
                    Text="{Binding MainTeam.Name}"
                    TextAlignment="Center"
                    TextWrapping="WrapWithOverflow" />
                <TextBlock
                    Name="AwayTeamName"
                    Canvas.Left="10"
                    Canvas.Top="153"
                    Width="134"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
                    d:Text="客队队伍名称"
                    FontFamily="{StaticResource POP1W5}"
                    FontSize="18"
                    Text="{Binding AwayTeam.Name}"
                    TextAlignment="Center"
                    TextWrapping="WrapWithOverflow" />
                <Border
                    Name="MainScoreTotal"
                    Canvas.Left="1345"
                    Canvas.Top="81"
                    Width="87"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}">
                    <TextBlock
                        HorizontalAlignment="Center"
                        d:Text="0"
                        FontFamily="{StaticResource POP1W5}"
                        FontSize="48"
                        FontWeight="Bold"
                        Text="{Binding TotalMainMinorPoint}" />
                </Border>
                <Border
                    Name="AwayScoreTotal"
                    Canvas.Left="1345"
                    Canvas.Top="140"
                    Width="87"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}">
                    <TextBlock
                        HorizontalAlignment="Center"
                        d:Text="0"
                        FontFamily="{StaticResource POP1W5}"
                        FontSize="48"
                        FontWeight="Bold"
                        Text="{Binding TotalAwayMinorPoint}" />
                </Border>
            </Canvas>
        </Border>
    </Grid>
</Window>
