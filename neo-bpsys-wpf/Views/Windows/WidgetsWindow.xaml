<Window
    x:Class="neo_bpsys_wpf.Views.Windows.WidgetsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ab="clr-namespace:neo_bpsys_wpf.AttachedBehaviors"
    xmlns:cv="clr-namespace:neo_bpsys_wpf.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:neo_bpsys_wpf.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:neo_bpsys_wpf.ViewModels.Windows"
    Title="前台-小组件"
    Width="1440"
    Height="554"
    d:DataContext="{d:DesignInstance Type=vm:WidgetsWindowViewModel,
                                     IsDesignTimeCreatable=True}"
    Background="Blue"
    Style="{StaticResource FrontWindow}"
    mc:Ignorable="d">
    <Grid Width="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Width}" Height="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Height}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" BorderThickness="1">
            <Canvas
                Name="MapBpCanvas"
                Width="308"
                Height="554"
                HorizontalAlignment="Left">
                <Canvas.Background>
                    <ImageBrush d:ImageSource="/Assets/mapBp.png" />
                </Canvas.Background>
                <Canvas.Resources>
                    <Style BasedOn="{StaticResource {x:Type ui:Image}}" TargetType="ui:Image">
                        <Setter Property="CornerRadius" Value="8" />
                        <Setter Property="Stretch" Value="UniformToFill" />
                        <Setter Property="Height" Value="138" />
                        <Setter Property="Width" Value="290" />
                    </Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="FontSize" Value="22" />
                    </Style>
                </Canvas.Resources>
                <ui:Image
                    Name="PickedMap"
                    Canvas.Left="9"
                    Canvas.Top="54"
                    ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
                    d:Source="/Assets/map/唐人街.png"
                    Source="{Binding CurrentGame.PickedMapImage}" />
                <Border
                    Name="PickedMapName"
                    Canvas.Left="38"
                    Canvas.Top="149"
                    Width="232"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        d:Text="唐人街"
                        FontFamily="{StaticResource Hanyi}"
                        Text="{Binding CurrentGame.PickedMap}" />
                </Border>
                <Border
                    Name="PickWord"
                    Canvas.Left="38"
                    Canvas.Top="197"
                    Width="232"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource POP1W5}"
                        Text="选择" />
                </Border>
                <!--  Team info  -->
                <Border
                    Name="SurTeamName"
                    Canvas.Top="265"
                    Width="137"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        d:Text="队伍名称"
                        FontFamily="{StaticResource Hanyi}"
                        FontSize="20"
                        Text="{Binding CurrentGame.SurTeam.Name}" />
                </Border>

                <TextBlock
                    Name="VS_Word"
                    Canvas.Left="142"
                    Canvas.Top="266"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontFamily="{StaticResource POP1W5}"
                    Text="VS" />

                <Border
                    Name="HunTeamName"
                    Canvas.Left="171"
                    Canvas.Top="265"
                    Width="137"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        d:Text="队伍名称"
                        FontFamily="{StaticResource Hanyi}"
                        FontSize="20"
                        Text="{Binding CurrentGame.HunTeam.Name}" />
                </Border>

                <ui:Image
                    Name="BannedMap"
                    Canvas.Left="9"
                    Canvas.Top="375"
                    ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
                    d:Source="/Assets/map_singleColor/红教堂.png"
                    Source="{Binding CurrentGame.BannedMapImage}" />
                <Border
                    Name="BannedMapName"
                    Canvas.Left="38"
                    Canvas.Top="475"
                    Width="232"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        d:Text="红教堂"
                        FontFamily="{StaticResource Hanyi}"
                        Text="{Binding CurrentGame.BannedMap}" />
                </Border>
                <Border
                    Name="BanWord"
                    Canvas.Left="38"
                    Canvas.Top="522"
                    Width="232"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource POP1W5}"
                        Text="禁用" />
                </Border>
            </Canvas>
        </Border>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="182 " />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Border BorderBrush="Black" BorderThickness="1">
                <Canvas Name="BpOverViewCanvas">
                    <Canvas.Background>
                        <ImageBrush d:ImageSource="/Assets/bpOverview.png" />
                    </Canvas.Background>
                    <Canvas.Resources>
                        <cv:GameProgressToStringConverter x:Key="GameProgressToStringConverter" />
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="White" />
                        </Style>
                        <Style x:Key="CurrentBan" TargetType="Image">
                            <Setter Property="Width" Value="38.5" />
                            <Setter Property="Height" Value="38.5" />
                        </Style>
                        <Style x:Key="SurPickImage" TargetType="Image">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="Stretch" Value="UniformToFill" />
                            <Setter Property="Width" Value="150" />
                        </Style>
                        <Style x:Key="SurPickImageBorder" TargetType="Border">
                            <Setter Property="Width" Value="74" />
                            <Setter Property="Height" Value="108" />
                            <Setter Property="ClipToBounds" Value="True" />
                        </Style>
                    </Canvas.Resources>
                    <ui:Image
                        Name="SurTeamLogo"
                        Canvas.Left="42"
                        Canvas.Top="30"
                        Width="85"
                        Height="85"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
                        d:Source="/Assets/TestLogo.JPG"
                        CornerRadius="8"
                        Source="{Binding CurrentGame.SurTeam.Logo}"
                        Stretch="Fill" />
                    <TextBlock
                        Name="SurTeamNameInOverview"
                        Canvas.Top="132"
                        Width="166"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
                        d:Text="求生者队伍名称"
                        FontFamily="{StaticResource SourceHan}"
                        FontSize="22"
                        Text="{Binding CurrentGame.SurTeam.Name}"
                        TextAlignment="Center"
                        TextWrapping="WrapWithOverflow" />
                    <TextBlock
                        Name="HunTeamNameInOverview"
                        Canvas.Left="960"
                        Canvas.Top="132"
                        Width="166"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
                        d:Text="监管者队伍名称"
                        FontFamily="{StaticResource SourceHan}"
                        FontSize="22"
                        Text="{Binding CurrentGame.HunTeam.Name}"
                        TextAlignment="Center"
                        TextWrapping="WrapWithOverflow" />
                    <ui:Image
                        Name="HunTeamLogo"
                        Canvas.Left="1000"
                        Canvas.Top="30"
                        Width="86"
                        Height="85"
                        ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
                        d:Source="/Assets/TestLogo.JPG"
                        CornerRadius="8"
                        Source="{Binding CurrentGame.HunTeam.Logo}"
                        Stretch="Fill" />
                    <!--  Current Ban  -->
                    <!--  Hun Current Ban  -->
                    <Image
                        Name="HunBanCurrent0"
                        Canvas.Left="205"
                        Canvas.Top="6"
                        ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
                        d:Source="/Assets/厂长.png"
                        Source="{Binding CurrentGame.CurrentHunBannedList[0].HeaderImageSingleColor}"
                        Style="{StaticResource CurrentBan}" />
                    <Image
                        Name="HunBanCurrent1"
                        Canvas.Left="304"
                        Canvas.Top="6"
                        ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
                        d:Source="/Assets/厂长.png"
                        Source="{Binding CurrentGame.CurrentHunBannedList[1].HeaderImageSingleColor}"
                        Style="{StaticResource CurrentBan}" />
                    <!--  Hun Current Ban Lock  -->
                    <Image
                        Name="HunBanCurrentLock0"
                        Canvas.Left="205"
                        Canvas.Top="6"
                        Panel.ZIndex="1"
                        Source="{Binding CurrentBanLockImage}"
                        Style="{StaticResource CurrentBan}"
                        Visibility="{Binding CanCurrentHunBanned[0], Converter={StaticResource BooleanToReverseVisibilityConverter}}" />
                    <Image
                        Name="HunBanCurrentLock1"
                        Canvas.Left="304"
                        Canvas.Top="6"
                        Panel.ZIndex="1"
                        Source="{Binding CurrentBanLockImage}"
                        Style="{StaticResource CurrentBan}"
                        Visibility="{Binding CanCurrentHunBanned[1], Converter={StaticResource BooleanToReverseVisibilityConverter}}" />
                    <!--  Sur Current Ban  -->
                    <Image
                        Name="SurBanCurrent3"
                        Canvas.Left="897"
                        Canvas.Top="6"
                        ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
                        d:Source="/Assets/幸运儿.png"
                        Source="{Binding CurrentGame.CurrentSurBannedList[3].HeaderImageSingleColor}"
                        Style="{StaticResource CurrentBan}" />
                    <Image
                        Name="SurBanCurrent2"
                        Canvas.Left="820"
                        Canvas.Top="6"
                        ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
                        d:Source="/Assets/幸运儿.png"
                        Source="{Binding CurrentGame.CurrentSurBannedList[2].HeaderImageSingleColor}"
                        Style="{StaticResource CurrentBan}" />
                    <Image
                        Name="SurBanCurrent1"
                        Canvas.Left="746"
                        Canvas.Top="6"
                        ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
                        d:Source="/Assets/幸运儿.png"
                        Source="{Binding CurrentGame.CurrentSurBannedList[1].HeaderImageSingleColor}"
                        Style="{StaticResource CurrentBan}" />
                    <Image
                        Name="SurBanCurrent0"
                        Canvas.Left="668"
                        Canvas.Top="6"
                        ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
                        d:Source="/Assets/幸运儿.png"
                        Source="{Binding CurrentGame.CurrentSurBannedList[0].HeaderImageSingleColor}"
                        Style="{StaticResource CurrentBan}" />
                    <!--  Sur Current Ban Lock  -->
                    <Image
                        Name="SurBanCurrentLock3"
                        Canvas.Left="897"
                        Canvas.Top="6"
                        Panel.ZIndex="1"
                        Source="{Binding CurrentBanLockImage}"
                        Style="{StaticResource CurrentBan}"
                        Visibility="{Binding CanCurrentSurBanned[3], Converter={StaticResource BooleanToReverseVisibilityConverter}}" />
                    <Image
                        Name="SurBanCurrentLock2"
                        Canvas.Left="820"
                        Canvas.Top="6"
                        Panel.ZIndex="1"
                        Source="{Binding CurrentBanLockImage}"
                        Style="{StaticResource CurrentBan}"
                        Visibility="{Binding CanCurrentSurBanned[2], Converter={StaticResource BooleanToReverseVisibilityConverter}}" />
                    <Image
                        Name="SurBanCurrentLock1"
                        Canvas.Left="746"
                        Canvas.Top="6"
                        Panel.ZIndex="1"
                        Source="{Binding CurrentBanLockImage}"
                        Style="{StaticResource CurrentBan}"
                        Visibility="{Binding CanCurrentSurBanned[1], Converter={StaticResource BooleanToReverseVisibilityConverter}}" />
                    <Image
                        Name="SurBanCurrentLock0"
                        Canvas.Left="668"
                        Canvas.Top="6"
                        Panel.ZIndex="1"
                        Source="{Binding CurrentBanLockImage}"
                        Style="{StaticResource CurrentBan}"
                        Visibility="{Binding CanCurrentSurBanned[0], Converter={StaticResource BooleanToReverseVisibilityConverter}}" />
                    <!--  Sur Pick  -->
                    <Border
                        Name="SurPick0"
                        Canvas.Left="170"
                        Canvas.Top="71"
                        ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
                        Style="{StaticResource SurPickImageBorder}">
                        <Image
                            d:Source="/Assets/先知.png"
                            Source="{Binding CurrentGame.SurPlayerList[0].Character.BigImage}"
                            Style="{StaticResource SurPickImage}" />
                    </Border>
                    <Border
                        Name="SurPick1"
                        Canvas.Left="247"
                        Canvas.Top="71"
                        ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
                        Style="{StaticResource SurPickImageBorder}">
                        <Image
                            d:Source="/Assets/先知.png"
                            Source="{Binding CurrentGame.SurPlayerList[1].Character.BigImage}"
                            Style="{StaticResource SurPickImage}" />
                    </Border>
                    <Border
                        Name="SurPick2"
                        Canvas.Left="326"
                        Canvas.Top="71"
                        ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
                        Style="{StaticResource SurPickImageBorder}">
                        <Image
                            d:Source="/Assets/先知.png"
                            Source="{Binding CurrentGame.SurPlayerList[2].Character.BigImage}"
                            Style="{StaticResource SurPickImage}" />
                    </Border>
                    <Border
                        Name="SurPick3"
                        Canvas.Left="405"
                        Canvas.Top="71"
                        ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
                        Style="{StaticResource SurPickImageBorder}">
                        <Image
                            d:Source="/Assets/先知.png"
                            Source="{Binding CurrentGame.SurPlayerList[3].Character.BigImage}"
                            Style="{StaticResource SurPickImage}" />
                    </Border>
                    <!--  Middle  -->
                    <Border
                        Name="GameProgress"
                        Canvas.Left="471"
                        Width="178"
                        Height="50"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Panel.ZIndex="1"
                        ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            d:Text="GAME3 EXTRA&#10;FIRST HALF"
                            FontFamily="{StaticResource POP1W5}"
                            FontSize="22"
                            TextAlignment="Center"
                            TextOptions.TextFormattingMode="Display"
                            TextOptions.TextRenderingMode="ClearType">
                            <TextBlock.Text>
                                <MultiBinding Converter="{StaticResource GameProgressToStringConverter}" ConverterParameter="endl">
                                    <Binding Path="CurrentGame.GameProgress" />
                                    <Binding Path="IsBo3Mode" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </Border>


                    <TextBlock
                        Name="MinorPointsSur"
                        Canvas.Left="495"
                        Canvas.Top="94"
                        Width="52"
                        Height="62"
                        ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
                        d:Text="0"
                        FontFamily="{StaticResource POP1W5}"
                        FontSize="50"
                        FontWeight="Bold"
                        Text="{Binding CurrentGame.SurTeam.Score.MinorPoints}"
                        TextAlignment="Center" />
                    <TextBlock
                        Name="RatioChar"
                        Canvas.Left="552"
                        Canvas.Top="89"
                        Width="25"
                        Height="62"
                        ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
                        FontFamily="{StaticResource POP1W5}"
                        FontSize="50"
                        FontWeight="Bold"
                        Text=":"
                        TextAlignment="Center" />
                    <TextBlock
                        Name="MinorPointsHun"
                        Canvas.Left="583"
                        Canvas.Top="94"
                        Width="52"
                        Height="62"
                        ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
                        d:Text="0"
                        FontFamily="{StaticResource POP1W5}"
                        FontSize="50"
                        FontWeight="Bold"
                        Text="{Binding CurrentGame.HunTeam.Score.MinorPoints}"
                        TextAlignment="Center" />

                    <!--  Hun Pick  -->
                    <Border
                        Name="HunPick"
                        Canvas.Left="650"
                        Canvas.Top="56"
                        Width="310"
                        Height="123"
                        ab:DesignBehavior.IsDesignMode="{Binding IsDesignMode}"
                        Style="{StaticResource SurPickImageBorder}">
                        <Image
                            Width="260"
                            d:Source="/Assets/梦之女巫.png"
                            Source="{Binding CurrentGame.HunPlayer.Character.BigImage}"
                            Style="{StaticResource SurPickImage}" />
                    </Border>
                </Canvas>
            </Border>
        </Grid>
    </Grid>
</Window>
