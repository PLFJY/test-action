<Application
    x:Class="neo_bpsys_wpf.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:neo_bpsys_wpf"
    xmlns:localTheme="clr-namespace:neo_bpsys_wpf.Theme"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    DispatcherUnhandledException="OnDispatcherUnhandledException">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
                <localTheme:IconThemesDictionary Theme="Dark" />
                <ResourceDictionary Source="/CustomControls/CustomControlsStyleDictionary.xaml" />
                <!--  Styles  -->
                <ResourceDictionary Source="/Styles/ToggleButtonStyles.xaml" />
                <ResourceDictionary Source="/Styles/Card.xaml" />
                <ResourceDictionary Source="/Styles/TitleBarButtonStyles.xaml" />
                <ResourceDictionary Source="/Styles/HighlightStyle.xaml" />
                <ResourceDictionary Source="/Styles/PickingBorderStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="FrontWindow" TargetType="Window">
                <Setter Property="ResizeMode" Value="NoResize" />
                <Setter Property="SizeToContent" Value="WidthAndHeight" />
                <Setter Property="WindowStyle" Value="None" />
            </Style>
            <!--  Fonts  -->
            <FontFamily x:Key="Hanyi">/neo-bpsys-wpf;Component/Assets/Fonts/#汉仪第五人格体简</FontFamily>
            <FontFamily x:Key="POP1W5">/neo-bpsys-wpf;Component/Assets/Fonts/#华康POP1体W5</FontFamily>
            <FontFamily x:Key="EssayText">/neo-bpsys-wpf;Component/Assets/Fonts/#Essay Text</FontFamily>
            <FontFamily x:Key="Selawik">/neo-bpsys-wpf;Component/Assets/Fonts/#Selawik</FontFamily>
            <FontFamily x:Key="SourceHan">/neo-bpsys-wpf;Component/Assets/Fonts/#Source Han Sans HW SC VF</FontFamily>

            <!--  Images  -->
            <BitmapImage x:Key="surIcon" />
            <BitmapImage x:Key="hunIcon" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
